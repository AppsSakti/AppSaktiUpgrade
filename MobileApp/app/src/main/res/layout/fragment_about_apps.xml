<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
			 xmlns:tools="http://schemas.android.com/tools"
			 android:layout_width="match_parent"
			 android:layout_height="match_parent"
			 android:background="#fff"
			 tools:context="com.hmif.appssakti.ListIconFragment">

	<ImageView
		android:id="@+id/card_header_image"
		android:layout_width="match_parent"
		android:layout_height="@dimen/flexible_space_height"
		android:scaleType="centerInside"
		android:src="@drawable/apps_header_logo"/>

	<com.github.ksoichiro.android.observablescrollview.ObservableScrollView
		android:id="@+id/scroll_view"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:fillViewport="true">

		<LinearLayout
			android:id="@+id/scroll_container"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:minHeight="810dp"
			android:paddingTop="@dimen/flexible_space_height">

			<LinearLayout
				android:id="@+id/container_info"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingTop="20dp"
				android:paddingLeft="@dimen/information_padding"
				android:paddingRight="@dimen/information_padding"
				android:paddingBottom="40dp"
				android:background="#fff"
				android:orientation="vertical">


				<TextView
					android:id="@+id/information_text"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:lineSpacingExtra="@dimen/extra_spacing"
					android:textColor="#878787"
					android:text="Aplikasi Sakti berisikan ensiklopedia KM-ITB. Di dalamnya tedapat informasi lengkap mengenai kemahasiswaan yang ada di ITB. Di dalam setiap informasi organisasi kemahasiswaan terdapat deskripsi arah gerak, kegiatan, program kerja unggulan, informasi sekretariat, dan kontak sosial yang dapat dihubungi.\n\nDengan adanya apps ini, semoga seluruh mahasiswa ITB dapat mengetahui pergerakan kemahasiswaan yang dilakukan oleh mahasiswa ITB."/>



			</LinearLayout>


		</LinearLayout>

	</com.github.ksoichiro.android.observablescrollview.ObservableScrollView>

	<View
		android:id="@+id/overlay_view"
		android:layout_width="match_parent"
		android:layout_height="@dimen/flexible_space_height"
		android:background="#FFCB01"/>

	<include layout="@layout/toolbar"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="@dimen/flexible_space_height"
		android:orientation="vertical">

		<TextView
			android:id="@+id/title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#878787"
			android:textSize="17sp"
			android:textStyle="bold"
			android:text="Tentang Apps Sakti"/>

	</LinearLayout>

</FrameLayout>